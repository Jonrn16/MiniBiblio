{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode %}Modificar Socio{% else %}Nuevo Socio{% endif %}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h2 class="mb-0">
                            {# Indicamos claramente el estado según el PDF 6.4 #}
                            {% if editMode %}
                                Modificando socio: {{ socio.nombre }} {{ socio.apellidos }}
                            {% else %}
                                Registrar un nuevo socio
                            {% endif %}
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {# Renderizado de campos #}
                        <div class="row">
                            <div class="col-md-4">{{ form_row(form.dni) }}</div>
                            <div class="col-md-4">{{ form_row(form.nombre) }}</div>
                            <div class="col-md-4">{{ form_row(form.apellidos) }}</div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">{{ form_row(form.telefono) }}</div>
                            <div class="col-md-6">
                                <label class="form-label d-block">Tipo de Socio</label>
                                {{ form_widget(form.docente) }} {{ form_label(form.docente) }}
                                <div class="mt-2">
                                    {{ form_widget(form.estudiante) }} {{ form_label(form.estudiante) }}
                                </div>
                                {# Mostramos errores globales (como la expresión de docente/estudiante) #}
                                {{ form_errors(form) }}
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            {# Botón volver (Navegabilidad PDF 6.2) #}
                            <a href="{{ path('socio_listar') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar y volver
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i>
                                {% if editMode %}Guardar cambios{% else %}Crear socio{% endif %}
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}